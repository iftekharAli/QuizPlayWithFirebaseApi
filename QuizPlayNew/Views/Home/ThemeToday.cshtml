
@{
    ViewBag.Title = "ThemeToday";
    Layout = "~/Views/Shared/Master.cshtml";
}

<script src="~/Scripts/ThemeToday.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<div ng-controller="ThemeController" style="max-width:75%">
    <input type="hidden" value="{{ID}}" />
    <br />
    <br />

    <div class="row">
        <div class="col-md-10 col-sm-10"  style="margin-left:36%">
            <span class="omnesFont welcome">THEME TODAY</span>
        </div>
    </div>
    <div class="row">
        
    </div>
    <div ng-show="spinner" class="row text-center">
        <span style="font-size: 350px;"><i class="fa fa-spinner fa-spin fa-10x"></i></span>
    </div>
    <div ng-show="fulltheme">
        
    
         <div class="row">
             <div class="col-md-10 col-sm-10" style="margin-left:40%">
                 <span class="omnesFont themeAlign">{{ThemeName}}</span>
             </div>
         </div>
             <div class="row roundBorder" >
                 <div class="col-md-10 col-sm-10">
                     <img src="{{ThemeImage}}" width="650px"/>
                 </div>
             </div>
    </div>
    <div class="row">
        <br /><br /><br /><br />
    </div>
    <div class="row text-center" style="margin-left:45%" ng-show="khelun">
        <a ng-click="addSession(ID)">
            <img src="~/Images/khelun.png" width="100%" height="9%" />
        </a>
    </div>
    <div ng-show="spinnerkhelun" class="row text-center">
        <span style="font-size: 100px;"><i class="fa fa-spinner fa-spin fa-10x"></i></span>
    </div>
    <div class="row">
        <br /><br /><br /><br />
    </div>
    <div class="row" style="margin-left:50%">
        <div class="col-md-8 col-sm-8">
            <a href="@Url.Action("")"><img src="~/Images/Quizplay_graphics/Home.png" width="40%" /></a>
            <a href="@Url.Action("")"><img src="~/Images/Quizplay_graphics/Exit.png" width="40%" /></a>
        </div>
    </div>

</div>
